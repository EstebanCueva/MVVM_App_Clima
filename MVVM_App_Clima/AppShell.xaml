<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MVVM_App_Clima.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MVVM_App_Clima.View"
    Title="MVVM_App_Clima">

    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="About" />

    <ShellContent
    Title="Weather"
    ContentTemplate="{DataTemplate local:WeatherView}"
    Route="WeatherView" />
    <ShellContent
    Title="Recordatorios"
    ContentTemplate="{DataTemplate local:RecordatoriosPage}"
    Route="Recordatorios" />
    <ShellContent
    Title="Notas"
    ContentTemplate="{DataTemplate local:NotesPage}"
    Route="Notas" />

</Shell>
